#################################################################
# SUPER + FUNCTION KEYS
#################################################################


#Sublime
super + F1
	subl

# Browser
super + F2
	firefox

#Meld
super + F5
    meld

#################################################################
# SUPER + ... KEYS
#################################################################

# Focus/swap windows by direction
super + {Left,Down,Up,Right}
	bspc node --{focus} {west,south,north,east}

#Close the focused window
super + c
    bspc node -c

#rofi drun mode, dmenu theme
super + d
	rofi -show drun -theme ik57-dmenu.rasi

#Htop
super + h
    alacritty -e htop
    
# List sxhkd keybindings help menu with rofi
super + k
	~/.config/bspwm/scripts/sxhkd-help

#Rofi combi mode
super + r
    rofi -combi-modi window,drun,run -show combi -modi combi

#alacritty
super + t
    alacritty

#Pavucontrol
super + v
    pavucontrol
    
#arcolinux-logout
super + x
    arcolinux-logout

#Alacritty
super + Return
    alacritty

#Xkill
super + Escape
    xkill

#Keyboard dependent
#alacritty
super + KP_Enter
	alacritty
  
#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	thunar

#Keyboard dependent
#File-Manager
super + shift + KP_Enter
	thunar

#dmenu
super + shift + d
	dmenu_run -i -nb '#212121' -nf '#FF4081' -sb '#0288D1' -sf '#191919' -fn 'JetBrainsMono-Regular:bold:pixelsize=22'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

# Rotate tree
super + shift + {f,b}
    bspc node @/ -C {forward,backward}

