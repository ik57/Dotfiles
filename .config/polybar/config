[module/toggle_kb]
type = custom/script
exec = echo 'Toggle KB |'
click-left = ~/.config/polybar/scripts/toggle_kb.sh
format-padding = 1
format-foreground = ${colors.foreground}
format-background = ${colors.background-3}
