[bar/mainbar-bspwm]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true
bottom = false
;separator = |

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #70d6ff

wm-restack = bspwm
override-redirect = true

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

border-size = 0
;border-left-size = 0
;border-right-size = 25
;border-top-size = 0
;border-bottom-size = 25
;border-color = #00000000

padding-left =  0
padding-right = 0

module-margin-left =  0
module-margin-right = 0

;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "JetBrainsMono:style=Regular:size=10;0"
font-1 = "FontAwesome:size=14;0"
font-2 = "JetBrainsMono:style=Regular:size=13;0"
font-3 = "Unifont:style:Bold:size=14;0"
font-4 = "JetBrainsMono:style=Bold:size=16;0"

modules-left =   bspwm
modules-center = xwindow
modules-right =  pavolume weather toggle_kb xkeyboard date wireless-network

tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding =  2
tray-maxsize =  20
tray-scale =    1.0
tray-position = right
tray-background = #7796cb

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

